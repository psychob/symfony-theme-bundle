{
    "name": "psychob/theme-bundle",
    "description": "Symfony bundle for combining and serving CSS/JS theme files with HTTP caching and source maps",
    "type": "symfony-bundle",
    "license": "MPL-2.0",
    "require": {
        "php": "^8.4",
        "symfony/config": "^8.0",
        "symfony/dependency-injection": "^8.0",
        "symfony/http-foundation": "^8.0",
        "symfony/http-kernel": "^8.0",
        "symfony/routing": "^8.0",
        "symfony/cache": "^8.0",
        "twig/twig": "^3.0 || ^4.0"
    },
    "require-dev": {
        "symfony/stopwatch": "^8.0",
        "phpunit/phpunit": "^11.0",
        "vimeo/psalm": "^6.0",
        "symplify/easy-coding-standard": "^12.0",
        "symplify/coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "PsychoB\\Theme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\PsychoB\\Theme\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "psalm": "psalm",
        "lint": "ecs check",
        "format": "ecs check --fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "bundles": {
                "PsychoB\\Theme\\ThemeBundle": ["all"]
            }
        }
    }
}
